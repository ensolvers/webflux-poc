<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <property  name="table.name"  value="core_chat_message" global="false"/>

    <changeSet  author="emanuel s"  id="00014_fix_sender_in_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Column ${table.name}:sender doesn't exists" >
            <columnExists tableName="${table.name}" columnName="sender" />
        </preConditions>

        <renameColumn   tableName="${table.name}" oldColumnName="sender" newColumnName="sender_id" columnDataType="varchar(255)"/>
        <modifyDataType tableName="${table.name}" columnName="sender_id" newDataType="${type.id}"/>
        <addNotNullConstraint tableName="${table.name}" columnName="sender_id" columnDataType="${type.id}" />
    </changeSet>

    <changeSet  author="emanuel s"  id="00014_drop_recipient_in_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Column ${table.name}:recipient_id doesn't exists" >
            <columnExists tableName="${table.name}" columnName="recipient_id" />
        </preConditions>

        <dropColumn tableName="${table.name}" columnName="recipient_id" />
    </changeSet>
</databaseChangeLog>
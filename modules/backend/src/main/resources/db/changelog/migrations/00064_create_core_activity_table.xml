<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro" 
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd 
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

  <property  name="table.name"  value="core_activity" global="false"/>

  <changeSet  author="Diego Prince"  id="00064_create_${table.name}_table">
    <preConditions onFail="MARK_RAN" onFailMessage="Table ${table.name} already exists"> <not> <tableExists tableName="${table.name}" /> </not> </preConditions>
    <createTable tableName="${table.name}">
      <!-- general properties -->
      <column name="id"          type="${type.id}"   autoIncrement="true" remarks="GenericModel">
        <constraints nullable="false" primaryKey="true" primaryKeyName="${table.name}_PK" />
      </column>
      <column name="external_id" type="${type.externalId}" remarks="PublicModel">
        <constraints nullable="false" unique="true" uniqueConstraintName="${table.name}_externalId_UK" />
      </column>
      <column name="created_at"  type="datetime" remarks="AuditableModel">
        <constraints nullable="false" />
      </column>
      <column name="updated_at"  type="datetime" remarks="AuditableModel">
        <constraints nullable="false" />
      </column>
      <column name="disabled_at" type="datetime" remarks="AuditableModel" />

      <!-- custom properties -->
      <!-- Core Activity -->
      <column name="activity_type" type="varchar(255)" remarks="CoreActivity">
        <constraints nullable="false" />
      </column>
      <column name="originator_id" type="bigint(20)" remarks="CoreActivity">
        <constraints nullable="false"
                     foreignKeyName="FK_${table.name}_originator__core_user_id"
                     referencedTableName="core_user" referencedColumnNames="id"
        />
      </column>

      <column name="recipient_id" type="bigint(20)" remarks="CoreActivity">
        <constraints nullable="false"
                     foreignKeyName="FK_${table.name}_recipient__core_user_id"
                     referencedTableName="core_user" referencedColumnNames="id"
        />
      </column>

      <column name="originator_points" type="int" remarks="CoreActivity">
        <constraints nullable="false" />
      </column>

      <column name="recipient_points" type="int" remarks="CoreActivity">
        <constraints nullable="false" />
      </column>

      <column name="metadata" type="text" remarks="CoreActivity">
        <constraints nullable="true" />
      </column>

      <column  name="is_public" type="${type.bool}" remarks="CoreActivity">
        <constraints nullable="false" />
      </column>

      <!-- Like Content Object Core Activity -->
      <column name="content_object_id" type="bigint(20)">
        <constraints nullable="true"
                     foreignKeyName="FK_${table.name}__content_object_id"
                     referencedTableName="core_content_object" referencedColumnNames="id"
        />
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>

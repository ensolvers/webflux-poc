<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro" 
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd 
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

  <property  name="table.name"  value="core_sms" global="false"/>

  <changeSet  author="giuliano"  id="00033_create_${table.name}_table">
    <preConditions onFail="MARK_RAN" onFailMessage="Table ${table.name} already exists" >
      <not>
        <tableExists tableName="${table.name}" />
      </not>
    </preConditions>

    <createTable tableName="${table.name}" > 
      <!-- general properties -->
      <column name="id" type="${type.id}" autoIncrement="true" remarks="GenericModel">
        <constraints nullable="false" primaryKey="true" primaryKeyName="${table.name}_PK" />
      </column>
      <column name="external_id" type="${type.externalId}" remarks="PublicModel" >
        <constraints nullable="false" unique="true" uniqueConstraintName="${table.name}_externalId_UK" />
      </column>
      <column name="created_at" type="datetime" remarks="AuditableModel" >
        <constraints nullable="false" />
      </column>
      <column name="updated_at" type="datetime" remarks="AuditableModel" >
        <constraints nullable="false" />
      </column>
      <column name="disabled_at" type="datetime" remarks="AuditableModel" />

      <!-- custom properties -->
      <column name="sender_id" type="varchar(255)">
        <constraints nullable="false" />
      </column>
      <column name="phone_number" type="varchar(255)">
        <constraints nullable="false" />
      </column>
      <column name="message" type="varchar(255)">
        <constraints nullable="false" />
      </column>
      <column name="is_high_priority" type="${type.bool}" defaultValue="0">
        <constraints nullable="false" />
      </column>
      <column name="max_price" type="decimal(10,2)" defaultValue="0">
        <constraints nullable="false" />
      </column>
      <column name="provider_message_id" type="varchar(255)" />
    </createTable>  
  </changeSet>
</databaseChangeLog>
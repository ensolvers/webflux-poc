<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro" 
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd 
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

  <property  name="table.name"  value="core_chat_message" global="false"/>

  <changeSet  author="matias"  id="00012_add_channel_id_to_${table.name}_table">
    <preConditions onFail="MARK_RAN" onFailMessage="Column ${table.name}:channel_id already exists" >
      <not> <columnExists tableName="${table.name}" columnName="channel_id" /> </not>
    </preConditions>
    <addColumn  tableName="${table.name}" >
      <column  name="channel_id" type="${type.id}"> <constraints foreignKeyName="FK_${table.name}__core_channel_id" referencedTableName="core_chat_channel" referencedColumnNames="id"/> </column>
    </addColumn>
  </changeSet>
</databaseChangeLog>


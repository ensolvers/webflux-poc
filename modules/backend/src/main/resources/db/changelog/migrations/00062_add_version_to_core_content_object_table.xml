<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <property  name="table.name"  value="core_content_object" global="false"/>

    <changeSet  author="Cesar Salazar"  id="00062_add_version_to_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Column ${table.name}:version already exists" >
            <not> <columnExists tableName="${table.name}" columnName="version" /> </not>
        </preConditions>

        <addColumn  tableName="${table.name}">
            <column  name="version" type="BIGINT" defaultValue="1" remarks="ContentObject">
                <constraints nullable="false" />
            </column>
        </addColumn>

        <addColumn tableName="${table.name}">
            <column name="is_active" type="BOOLEAN" defaultValue="false" remarks="ContentObject">
                <constraints nullable="false" />
            </column>
        </addColumn>

        <dropUniqueConstraint tableName="${table.name}" constraintName="slug" />
    </changeSet>
</databaseChangeLog>
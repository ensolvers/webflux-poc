<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <property name="table.name" value="core_social_follow" global="false"/>

    <changeSet author="Federico Cabral" id="00050_create_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Table ${table.name} already exists">
            <not>
                <tableExists tableName="${table.name}"/>
            </not>
        </preConditions>
        <createTable tableName="${table.name}">
            <!-- general properties -->
            <column name="id" type="${type.id}" autoIncrement="true" remarks="GenericModel">
                <constraints nullable="false" primaryKey="true" primaryKeyName="${table.name}_PK"/>
            </column>
            <column name="external_id" type="${type.externalId}" remarks="PublicModel">
                <constraints nullable="false" unique="true" uniqueConstraintName="${table.name}_externalId_UK"/>
            </column>
            <column name="created_at" type="datetime" remarks="AuditableModel">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="datetime" remarks="AuditableModel">
                <constraints nullable="false"/>
            </column>
            <column name="disabled_at" type="datetime" remarks="AuditableModel"/>

            <column name="social_user_follower_id" type="bigint(20)">
                <constraints
                    nullable="false"
                    foreignKeyName="follower_id_FK"
                    referencedTableName="core_user"
                    referencedColumnNames="id"
                />
            </column>
            <column name="social_user_followee_id" type="bigint(20)">
                <constraints
                    nullable="false"
                    foreignKeyName="followee_id_FK"
                    referencedTableName="core_user"
                    referencedColumnNames="id"
                />
            </column>
            <column name="request_status" type="VARCHAR(512)" />
            <column name="request_accepted_at" type="TIMESTAMP" />
        </createTable>
        <createIndex tableName="${table.name}" indexName="followee_id_idx">
            <column name="social_user_followee_id"/>
        </createIndex>
        <createIndex tableName="${table.name}" indexName="follower_id_idx">
            <column name="social_user_follower_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
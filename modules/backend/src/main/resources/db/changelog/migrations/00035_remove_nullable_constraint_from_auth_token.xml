<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <property  name="table.name"  value="core_auth_token" global="false"/>

    <changeSet  author="Diego Prince"  id="00035_remove_nullable_constraint_from_auth_token">
        <preConditions onFailMessage="Column ${table.name}:token doesn't exists" >
            <columnExists tableName="${table.name}" columnName="token" />
        </preConditions>

        <dropNotNullConstraint tableName="${table.name}" columnName="token" columnDataType="varchar(255)" />
    </changeSet>
</databaseChangeLog>





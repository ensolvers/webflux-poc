<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <property name="table.name" value="core_social_content" global="false"/>

    <changeSet author="Daniel Ramos" id="00053_create_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Table ${table.name} already exists">
            <not>
                <tableExists tableName="${table.name}"/>
            </not>
        </preConditions>
        <createTable tableName="${table.name}">
            <!-- general properties -->
            <column  name="id"          type="${type.id}"   autoIncrement="true"
                     remarks="GenericModel"   >    <constraints nullable="false" primaryKey="true" primaryKeyName="${table.name}_PK" />                  </column>
            <column  name="external_id" type="${type.externalId}" remarks="PublicModel" > <constraints nullable="false" unique="true"     uniqueConstraintName="${table.name}_externalId_UK" /> </column>
            <column  name="created_at"  type="datetime"     remarks="AuditableModel" >    <constraints nullable="false" />                                                                  </column>
            <column  name="updated_at"  type="datetime"     remarks="AuditableModel" >    <constraints nullable="false" />                                                                  </column>
            <column  name="disabled_at" type="datetime"     remarks="AuditableModel" />

            <!-- custom properties -->
            <column  name="title"        type="varchar(255)">
                <constraints
                        nullable="false"
                />
            </column>

            <column name="content_group_id" type="${type.id}">
                <constraints foreignKeyName="FK_${table.name}_social_content_group" referencedTableName="core_social_content_group" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro" 
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd 
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

  <property  name="table.name"  value="core_content_object" global="false"/>

  <changeSet  author="Cesar Salazar"  id="00057_create_${table.name}_table">
    <preConditions onFail="MARK_RAN" onFailMessage="Table ${table.name} already exists"> <not> <tableExists tableName="${table.name}" /> </not> </preConditions>
    <createTable tableName="${table.name}">
      <!-- general properties -->
      <column name="id"          type="${type.id}"   autoIncrement="true" remarks="GenericModel">
        <constraints nullable="false" primaryKey="true" primaryKeyName="${table.name}_PK" />
      </column>
      <column name="external_id" type="${type.externalId}" remarks="PublicModel">
        <constraints nullable="false" unique="true" uniqueConstraintName="${table.name}_externalId_UK" />
      </column>
      <column name="created_at"  type="datetime" remarks="AuditableModel">
        <constraints nullable="false" />
      </column>
      <column name="updated_at"  type="datetime" remarks="AuditableModel">
        <constraints nullable="false" />
      </column>
      <column name="disabled_at" type="datetime" remarks="AuditableModel" />

      <!-- custom properties -->
      <!-- Content Object -->
      <column name="author_id" type="bigint(20)">
        <constraints nullable="false"
                     foreignKeyName="FK_${table.name}__core_user_id"
                     referencedTableName="core_user" referencedColumnNames="id"
        />
      </column>
      <column name="title" type="varchar(255)" remarks="ContentObject">
        <constraints nullable="false" />
      </column>
      <column name="description" type="varchar(255)" remarks="ContentObject">
        <constraints nullable="false" />
      </column>
      <column name="public_at" type="datetime" remarks="ContentObject"/>
      <column name="slug" type="varchar(255)" remarks="ContentObject">
        <constraints nullable="false" unique="true" />
      </column>
      <column name="content" type="text" remarks="ContentObject">
        <constraints nullable="false" />
      </column>
      <column name="content_object_type" type="varchar(255)" remarks="ContentObject">
        <constraints nullable="false" />
      </column>

      <!-- Event -->
      <column name="date" type="datetime" remarks="Event"/>
      <column name="latitude" type="double" remarks="Event"/>
      <column name="longitude" type="double" remarks="Event"/>
      <column name="geocode" type="varchar(255)" remarks="Event"/>
      <column name="talents" type="text" remarks="Event"/>
      <column name="timezone" type="varchar(255)" remarks="Event"/>

      <!-- Stream -->
      <column name="streamURL" type="varchar(255)" remarks="Stream"/>
      <column name="type" type="varchar(255)" remarks="Stream"/>
      <column name="duration" type="int" remarks="Stream"/>
    </createTable>
  </changeSet>
</databaseChangeLog>

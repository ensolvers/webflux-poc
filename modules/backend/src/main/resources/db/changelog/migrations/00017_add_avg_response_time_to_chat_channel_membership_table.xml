<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <property  name="table.name"  value="core_chat_channel_membership" global="false"/>

    <changeSet  author="giuliano"  id="00017_add_avg_response_time_to_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Column ${table.name}:avg_response_time already exists" >
            <not> <columnExists tableName="${table.name}" columnName="avg_response_time" /> </not>
        </preConditions>
        <addColumn  tableName="${table.name}" >
            <column  name="avg_response_time" type="double" defaultValue="0" remarks="time in millis"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
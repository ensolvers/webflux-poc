<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <property  name="table.name"  value="core_auth_token" global="false"/>

    <changeSet  author="Diego Prince"  id="00036_add_hashed_token_to_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Column ${table.name}:hashed_token already exists" >
            <not> <columnExists tableName="${table.name}" columnName="hashed_token" /> </not>
        </preConditions>
        <addColumn  tableName="${table.name}" >
            <column  name="hashed_token" type="varchar(255)">
                <constraints nullable="true" unique="true"  uniqueConstraintName="${table.name}_hashed_token_UK" />
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
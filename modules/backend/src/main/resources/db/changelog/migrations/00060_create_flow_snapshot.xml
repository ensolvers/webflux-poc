<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <property  name="table.name"  value="core_flow_snapshot" global="false"/>

    <changeSet  author="Federico Cabral"  id="00060_create_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Table ${table.name} already exists"> <not> <tableExists tableName="${table.name}" /> </not> </preConditions>
        <createTable tableName="${table.name}">
            <!-- general properties -->
            <column name="id"          type="${type.id}"   autoIncrement="true" remarks="GenericModel">
                <constraints nullable="false" primaryKey="true" primaryKeyName="${table.name}_PK" />
            </column>
            <column name="created_at"  type="datetime" remarks="AuditableModel">
                <constraints nullable="false" />
            </column>

            <!-- custom properties -->
            <column name="state_representation" type="TEXT" />
            <column name="core_flow_id" type="bigint(20)">
                <constraints
                    nullable="false"
                    foreignKeyName="flow_id_FK"
                    referencedTableName="core_flow"
                    referencedColumnNames="id"
                />
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro" 
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd 
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

  <property  name="table.name"  value="core_address" global="false"/>

  <changeSet  author="Martin Villarreal"  id="00049_create_${table.name}_table">
    <preConditions onFail="MARK_RAN" onFailMessage="Table ${table.name} already exists" >
      <not> <tableExists tableName="${table.name}" /> </not>
    </preConditions>
    <createTable tableName="${table.name}" > 
      <!-- general properties -->
      <column  name="id"          type="${type.id}"   autoIncrement="true"
                                                      remarks="GenericModel"   >    <constraints nullable="false" primaryKey="true" primaryKeyName="${table.name}_PK" />                  </column>
      <column  name="external_id" type="${type.externalId}" remarks="PublicModel" > <constraints nullable="false" unique="true"     uniqueConstraintName="${table.name}_externalId_UK" /> </column>
      <column  name="created_at"  type="datetime"     remarks="AuditableModel" >    <constraints nullable="false" />                                                                  </column>
      <column  name="updated_at"  type="datetime"     remarks="AuditableModel" >    <constraints nullable="false" />                                                                  </column>
      <column  name="disabled_at" type="datetime"     remarks="AuditableModel" /> 

      <!-- custom properties -->
      <column  name="street"        type="varchar(255)">   </column>
      <column  name="city"          type="varchar(255)">   </column>
      <column  name="state"         type="varchar(255)">   </column>
      <column  name="postal_code"    type="varchar(255)">   </column>
      <column  name="country"       type="varchar(255)">   </column>
      <column  name="core_user_id"  type="${type.id}"  >
        <constraints foreignKeyName="FK_${table.name}_core_user" referencedTableName="core_user" referencedColumnNames="id"/>
      </column>
    </createTable>  
  </changeSet>
</databaseChangeLog>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <property  name="table.name"  value="core_permissions_for_user" global="false"/>

    <changeSet  author="Patricio JuliÃ¡"  id="00061_create_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Table ${table.name} already exists" >
            <not> <tableExists tableName="${table.name}" /> </not>
        </preConditions>

        <createTable tableName="${table.name}" >
            <column name="user_id" type="bigint(20)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="core_permissions_per_user_PK"
                             foreignKeyName="FK_core_permissions_per_user__user_id" referencedTableName="core_user" referencedColumnNames="id"/>
            </column>
            <column name="permission_id" type="bigint(20)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="core_permissions_per_user_PK"
                             foreignKeyName="FK_core_permissions_per_user__permission_id" referencedTableName="core_permission" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
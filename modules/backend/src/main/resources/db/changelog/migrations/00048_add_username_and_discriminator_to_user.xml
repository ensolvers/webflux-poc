<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <property name="table.name" value="core_user" global="false" />

    <changeSet  author="Federico Cabral"  id="00048_add_username_and_discriminator_to_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Columns username and discriminator already exist">
            <not>
                <or>
                    <columnExists tableName="${table.name}" columnName="username" />
                    <columnExists tableName="${table.name}" columnName="user_type" />
                </or>
            </not>
        </preConditions>
        <addColumn tableName="${table.name}">
            <column name="user_type" type="VARCHAR(32)" defaultValue="DEFAULT" />
            <column name="username" type="VARCHAR(100)" />
        </addColumn>
    </changeSet>
</databaseChangeLog>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <property  name="table.name"  value="core_chat_channel" global="false"/>

    <changeSet  author="emanuel s"  id="00016_add_last_message_id_to_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Column ${table.name}:last_message_id already exists" >
            <not> <columnExists tableName="${table.name}" columnName="last_message_id" /> </not>
        </preConditions>
        <addColumn  tableName="${table.name}" >
            <column  name="last_message_id" type="${type.id}"> <constraints foreignKeyName="FK_${table.name}_core_chat_message" referencedTableName="core_chat_message" referencedColumnNames="id"/> </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
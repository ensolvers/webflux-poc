<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <property name="table.name" value="core_join_group_request" global="false"/>

    <changeSet author="Diego Prince" id="00067_create_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Table ${table.name} already exists">
            <not>
                <tableExists tableName="${table.name}"/>
            </not>
        </preConditions>
        <createTable tableName="${table.name}">
            <!-- general properties -->
            <column name="id" type="${type.id}" autoIncrement="true" remarks="GenericModel">
                <constraints nullable="false" primaryKey="true" primaryKeyName="${table.name}_PK"/>
            </column>
            <column name="external_id" type="${type.externalId}" remarks="PublicModel">
                <constraints nullable="false" unique="true" uniqueConstraintName="${table.name}_externalId_UK"/>
            </column>
            <column name="created_at" type="datetime" remarks="AuditableModel">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="datetime" remarks="AuditableModel">
                <constraints nullable="false"/>
            </column>
            <column name="disabled_at" type="datetime" remarks="AuditableModel"/>

            <!-- custom properties -->
            <!-- Join Group Request -->
            <column name="social_user_id" type="bigint(20)" remarks="JoinGroupRequest">
                <constraints
                    nullable="false"
                    foreignKeyName="social_user_id_FK"
                    referencedTableName="core_user"
                    referencedColumnNames="id"
                />
            </column>

            <column name="group_id" type="bigint(20)" remarks="JoinGroupRequest">
                <constraints
                    nullable="false"
                    foreignKeyName="group_id_FK"
                    referencedTableName="core_social_content_group"
                    referencedColumnNames="id"
                />
            </column>

            <column name="status" type="VARCHAR(512)" remarks="JoinGroupRequest" />

            <column name="request_accepted_at" type="datetime" remarks="JoinGroupRequest" />
        </createTable>

        <addUniqueConstraint
                tableName="${table.name}"
                columnNames="social_user_id, group_id"
                constraintName="uq_social_user_id__group_id_${table.name}"
        />
    </changeSet>
</databaseChangeLog>
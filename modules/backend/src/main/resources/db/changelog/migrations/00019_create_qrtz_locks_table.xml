<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro" 
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd 
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

  <property name="table_prefix" value="CORE_QRTZ_"/>

  <property name="blob_type" value="BYTEA" dbms="postgresql"/>
  <property name="blob_type" value="BLOB"/>

  <changeSet  author="DiegoPrince"  id="00019_create_qrtz_locks_table"  >
    <preConditions onFail="MARK_RAN" onFailMessage="Table ${table_prefix}LOCKS already exists" >
      <not> <tableExists tableName="${table_prefix}LOCKS" /> </not>
    </preConditions>
    <createTable tableName="${table_prefix}LOCKS">
      <column name="SCHED_NAME" type="VARCHAR(120)">
        <constraints nullable="false"/>
      </column>
      <column name="LOCK_NAME" type="VARCHAR(40)">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addPrimaryKey columnNames="SCHED_NAME, LOCK_NAME" tableName="${table_prefix}LOCKS"/>
  </changeSet>
</databaseChangeLog>
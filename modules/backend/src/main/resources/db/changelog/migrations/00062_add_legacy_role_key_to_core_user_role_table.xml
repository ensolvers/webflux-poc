<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <property  name="table.name"  value="core_user_role" global="false"/>
    <changeSet  author="Diego Prince"  id="00062_add_legacy_role_key_to_${table.name}_table">
        <preConditions onFail="MARK_RAN" onFailMessage="Column legacy_role_key already exists" >
            <not>
                <or>
                    <columnExists tableName="${table.name}" columnName="legacy_role_key" />
                </or>
            </not>
        </preConditions>
        <addColumn tableName="${table.name}">
            <column  name="legacy_role_key" type="varchar(255)" />
        </addColumn>
    </changeSet>
</databaseChangeLog>